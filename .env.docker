# Core Application
NODE_ENV=production
PORT=5000
HOST=0.0.0.0
# Disable HTTPS requirement for local Docker testing
DISABLE_HTTPS=true

# Database - MUST MATCH docker-compose.dev.yml
DATABASE_URL=postgresql://ils_user:ils_password@postgres:5432/ils_db

# Redis - Enabled for session storage
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379

# Security
SESSION_SECRET=development_session_secret_change_in_production
JWT_SECRET=development_jwt_secret_change_in_production
CSRF_SECRET=development_csrf_secret_change_in_production
ADMIN_SETUP_KEY=admin_secret_key_123

# CORS - Allow local access (including Vite dev server)
CORS_ORIGIN=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5005,http://localhost:5001,http://localhost:3000,http://localhost:5000

# Services - Use container names for Docker networking
PYTHON_SERVICE_URL=http://python-service:8000
AI_SERVICE_URL=http://ai-service:8082

# Workers
WORKERS_ENABLED=true

# Stripe - Use REAL test keys
STRIPE_SECRET_KEY=sk_test_51234567890abcdef
STRIPE_PUBLISHABLE_KEY=pk_test_51234567890abcdef
STRIPE_WEBHOOK_SECRET=whsec_test_51234567890abcdef

# Storage
STORAGE_PROVIDER=local

# Logging
LOG_LEVEL=info

# Optional API keys
# OPENAI_API_KEY=your_key_here
# ANTHROPIC_API_KEY=your_key_here

# Disable AI features for testing
DISABLE_AI_FEATURES=true

# Backup directory for Docker
BACKUP_LOCAL_PATH=/app/backups
