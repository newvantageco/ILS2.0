# Database Configuration
DATABASE_URL=your_neon_database_url_here

# Server Configuration
PORT=3000
NODE_ENV=production
SESSION_SECRET=replace_with_secure_session_secret
ADMIN_SETUP_KEY=replace_with_secure_admin_key

# Optional bootstrap master user (minimum 12 character password)
MASTER_USER_EMAIL=
MASTER_USER_PASSWORD=
MASTER_USER_FIRST_NAME=
MASTER_USER_LAST_NAME=
MASTER_USER_ORGANIZATION=

# Redis Configuration (Chunk 8 & Chunk 10)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# AWS S3 Configuration (Chunk 10: File Storage)
STORAGE_PROVIDER=local
# For local development, use 'local'. For production, use 's3', 'cloudflare-r2', or 'azure-blob'
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=ils-files
# Optional: Use MinIO for local S3-compatible storage
# S3_ENDPOINT=http://localhost:9000

# CDN Configuration (Optional)
CDN_BASE_URL=

# Observability Configuration
# Logging
LOG_LEVEL=info  # trace, debug, info, warn, error, fatal

# OpenTelemetry / Distributed Tracing
OTEL_ENABLED=false  # Set to 'true' to enable distributed tracing
OTEL_PROMETHEUS_PORT=9464  # Port for Prometheus metrics

# Sentry Error Tracking
SENTRY_DSN=  # Your Sentry DSN (optional)
SENTRY_DEVELOPMENT=false  # Set to 'true' to enable Sentry in development

# Add any other required environment variables here