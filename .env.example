# ================================
# CORE APPLICATION CONFIGURATION
# ================================

# Database Configuration
DATABASE_URL=your_neon_database_url_here

# Server Configuration
PORT=5000
HOST=0.0.0.0
NODE_ENV=production
APP_URL=http://localhost:5000

# Security & Sessions
SESSION_SECRET=replace_with_secure_session_secret
ADMIN_SETUP_KEY=replace_with_secure_admin_key
JWT_SECRET=replace_with_jwt_secret_if_using_jwt

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Optional bootstrap master user (minimum 12 character password)
MASTER_USER_EMAIL=
MASTER_USER_PASSWORD=
MASTER_USER_FIRST_NAME=
MASTER_USER_LAST_NAME=
MASTER_USER_ORGANIZATION=

# Redis Configuration (Chunk 8 & Chunk 10)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# AWS S3 Configuration (Chunk 10: File Storage)
STORAGE_PROVIDER=local
# For local development, use 'local'. For production, use 's3', 'cloudflare-r2', or 'azure-blob'
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=ils-files
# Optional: Use MinIO for local S3-compatible storage
# S3_ENDPOINT=http://localhost:9000

# CDN Configuration (Optional)
CDN_BASE_URL=

# LIMS Integration (Optional - for external lab management system)
LIMS_API_BASE_URL=
LIMS_API_KEY=
LIMS_WEBHOOK_SECRET=

# Analytics Integration (Optional - for external analytics platform)
ANALYTICS_WEBHOOK_URL=

# ================================
# EMAIL CONFIGURATION (RESEND)
# ================================
RESEND_API_KEY=re_xxxxxxxxxxxx
MAIL_FROM=hello@yourdomain.com

# ================================
# PAYMENT PROCESSING (STRIPE)
# ================================
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxx

# ================================
# MONITORING & ANALYTICS (OPTIONAL)
# ================================

# Sentry Error Tracking
SENTRY_DSN=

# PostHog Product Analytics
POSTHOG_API_KEY=

# ================================
# RAILWAY DEPLOYMENT (PRODUCTION)
# ================================
# When deploying to Railway, these variables are auto-provided:
# - DATABASE_URL (from Railway Postgres)
# - REDIS_URL (from Railway Redis)
# - PORT (Railway auto-assigns)
#
# Set these in Railway Variables panel:
# - APP_URL=https://app.yourdomain.com
# - SESSION_SECRET (generate with: openssl rand -base64 32)
# - STRIPE_SECRET_KEY (use live keys: sk_live_xxx)
# - STRIPE_PUBLISHABLE_KEY (use live keys: pk_live_xxx)
# - RESEND_API_KEY
# - MAIL_FROM

# ================================
# PYTHON ANALYTICS SERVICE
# ================================
# Python service URL for analytics and ML endpoints
PYTHON_SERVICE_URL=http://localhost:8000

# AI Service URL for multi-tenant RAG queries
AI_SERVICE_URL=http://localhost:8080

# Model path for LLM (optional - for local AI models)
MODEL_PATH=~/.cache/llama-models/Meta-Llama-3.1-8B-Instruct-Q4_K_M.gguf

# ================================
# MULTI-TENANT DATABASE CONFIGURATION (OPTIONAL)
# ================================
# For multi-tenant deployments, configure tenant-specific database URLs
# Example: TENANT_company123_SALES_DB=postgresql://user:pass@host/company123_sales
# If not set, will use the main DATABASE_URL for all tenants

