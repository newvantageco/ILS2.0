{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "types": ["jest", "node"],
    "skipLibCheck": true,
    "outDir": "../dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["../src/*"],
      "@shared/*": ["../shared/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}