{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile",
    "rootDirectory": ".",
    "watchPatterns": [
      "server/**",
      "client/**",
      "shared/**",
      "Dockerfile",
      ".dockerignore",
      "docker-start.sh",
      "package.json",
      "package-lock.json",
      "vite.config.ts",
      "tsconfig.json"
    ]
  },
  "deploy": {
    "startCommand": "./docker-start.sh",
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300
  }
}
