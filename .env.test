# Test Environment Configuration
# This file is used for running tests
NODE_ENV=test

# Test Database (use a separate database for tests)
# Replace with your actual test database URL
DATABASE_URL=postgresql://localhost:5432/ils_test

# Test Session Secret
SESSION_SECRET=test-secret-key-do-not-use-in-production

# Disable CSRF for tests
CSRF_ENABLED=false

# Test API Keys (mock values)
ANTHROPIC_API_KEY=test_anthropic_key
SHOPIFY_API_KEY=test_shopify_key
SHOPIFY_API_SECRET=test_shopify_secret

# Redis (optional for tests - will use mock if not provided)
REDIS_URL=redis://localhost:6379/1

# Disable external service calls in tests
ENABLE_EXTERNAL_SERVICES=false

# Test email configuration
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=test
SMTP_PASSWORD=test
SMTP_FROM=test@example.com

# Logging level for tests
LOG_LEVEL=error

# Test-specific settings
TEST_MODE=true
SKIP_WEBHOOKS=true
MOCK_EXTERNAL_APIS=true
