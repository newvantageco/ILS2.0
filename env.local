# ILS 2.0 - Local Development Environment Variables
# This file overrides .env for local development

# Database - PostgreSQL (Local)
DATABASE_URL=postgresql://ils_user:dev_password@localhost:5432/ils_db_dev?sslmode=disable

# Server Configuration
NODE_ENV=development
PORT=5000
HOST=0.0.0.0
APP_URL=http://localhost:5000

# Session Secret (Development only)
SESSION_SECRET=dev-session-secret-32-chars-long
CSRF_SECRET=dev-csrf-secret-32-chars-long

# Auth Provider (Local development)
AUTH_PROVIDER=local

# Redis (Optional - using local memory for dev)
REDIS_URL=redis://localhost:6379

# JWT Settings
JWT_SECRET=dev-jwt-secret-256-bits-minimum-length

# Email (Development - disabled)
EMAIL_SERVICE=disabled

# File Upload (Development - local storage)
UPLOAD_PROVIDER=local
UPLOAD_DIR=./uploads

# Logging
LOG_LEVEL=debug

# API Keys (Development - placeholders)
OPENAI_API_KEY=sk-placeholder-key
ANTHROPIC_API_KEY=placeholder-key
